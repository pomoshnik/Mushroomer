<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/fon1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Title"
        android:id="@+id/textView"
        android:textColor="#84f8ff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="25dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/setmesto"
        android:background="@drawable/buttonstyle"
        android:text="@string/SetMest"
        android:id="@+id/btSetMesto"
        android:textSize="20sp"
        android:textColor="#ffd591"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/setmesto"
        android:text="@string/FindMesto"
        android:id="@+id/btLoadMesto"
        android:textSize="20sp"
        android:textColor="#ffd591"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttonstyle"
        android:layout_below="@+id/btSetMesto"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/setmesto"
        android:text="@string/SaveForestEnter"
        android:id="@+id/btSaveFores"
        android:textSize="20sp"
        android:textColor="#ffd591"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttonstyle"
        android:layout_below="@+id/btLoadMesto"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/setmesto"
        android:text="@string/LoadForestEnter"
        android:id="@+id/btLoadForest"
        android:textSize="20sp"
        android:textColor="#ffd591"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttonstyle"
        android:layout_below="@+id/btSaveFores"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/setmesto"
        android:text="@string/Spr"
        android:id="@+id/btSpr"
        android:textSize="20sp"
        android:textColor="#ffd591"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttonstyle"
        android:layout_below="@+id/btLoadForest"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
